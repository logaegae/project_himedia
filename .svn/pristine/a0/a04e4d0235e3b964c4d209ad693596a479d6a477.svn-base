.checkSystem {
    .contents {
        margin:0 auto;
        width:1024px;
        div[class^="step"] {
            position:relative;
            width:100%;
            height:180px;
            text-align: center;
            font-size:0;
            p {
                font-size:17px;
                margin-bottom:20px;
                span {font-weight:@gnb-weight;}
                &:before {
                    display: inline-block;
                    content:'';
                    height:41%;
                    vertical-align: bottom;
                }
            }
            button, a {
                display:inline-block;
                margin: 0 5px;
                width:80px;
                height:40px;
                font-size:16px;
                line-height:40px;
                color:@white-color;
                border:none;
            }
            .btn-red {background:@main-color;}
            .btn-navy {background:@sub-color;}
            .tip {
                position: absolute;
                bottom:51px;
                right:15px;
                font-size:13px;
                .question {
                    display:inline-block;
                    width:30px;
                    height:30px;
                    line-height:30px;
                    font-size:20px;
                    color:@main-color;
                    border:1px @main-color solid;
                    .radius(15px);
                }
                .tooltip-text {
                    position:absolute;
                    display:none;
                    right:44px;
                    bottom:-3px;
                    width:314px;
                    line-height:19px;
                    text-align:right;
                    span {
                        font-weight:@gnb-weight;
                    }
                }
            }
        }
        .bgGrey {background-color:@base-color;}
    }
    .boxes{
        display:none;
        opacity:0;
        margin-top:-50px;
    }
    .step1{
        margin-top:0;
        display:block;
        opacity:1
    }
    .on{
        display:block;
    }

}
