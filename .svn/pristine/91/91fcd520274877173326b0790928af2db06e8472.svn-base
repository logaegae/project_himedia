.courseMain{
    .course_title{
        text-align: center;
        font-size:@menu-size;
        padding:70px 0;
        span{font-weight:700}
    }
    .course_cont{
        width:1026px;
        margin:0 auto;
        ul{
            font-size: 0;
            padding-bottom:90px;
            li{
                .inlineblock();
                text-align: center;
                width:50%;
                margin-bottom:70px;

                >span.icon{
                    .inlineblock();
                    margin-bottom:39px;
                }
                .course_icon1{
                    width:134px;
                    height:128px;
                    background:url('/img/icon/course_icon1_off.jpg') no-repeat;
                }
                .course_icon2{
                    width:169px;
                    height:128px;
                    background:url('/img/icon/course_icon2_off.jpg') no-repeat;
                }
                .course_icon3{
                    width:134px;
                    height:136px;
                    background:url('/img/icon/course_icon3_off.jpg') no-repeat;
                }
                .course_icon4{
                    width:169px;
                    height:136px;
                    background:url('/img/icon/course_icon4_off.jpg') no-repeat;
                }
                .title{
                    font-size:@summery-size;
                    font-weight: 700;
                    color:@content-color;
                    margin:40px 0 20px;
                }
                .sub_title{
                    font-size:@menu-size;
                    color:@content-color;
                    span{
                        font-weight: 700;
                    }
                }
                button{
                    height:65px;
                    width:360px;
                    background:@sub-color;
                    color:@white-color;
                    font-size:16px;
                    font-weight: @gnb-weight;
                    margin-top:45px;
                    span{
                        margin-left:150px;
                    }
                }
                &&:hover{
                    .course_icon1{
                        background:url('/img/icon/course_icon1_on.jpg') no-repeat;
                    }
                    .course_icon2{
                        background:url('/img/icon/course_icon2_on.jpg') no-repeat;
                    }
                    .course_icon3{
                        background:url('/img/icon/course_icon3_on.jpg') no-repeat;
                    }
                    .course_icon4{
                        background:url('/img/icon/course_icon4_on.jpg') no-repeat;
                    }
                    button{
                        background:@main-color;
                        span{
                            background-position: -80px 0;
                        }
                    }
                }
            }
        }
    }
}
