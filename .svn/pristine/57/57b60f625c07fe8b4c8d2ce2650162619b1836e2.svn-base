.search{
    .serch_box{
        width:750px;
        padding:68px 0;
        margin:0 auto 40px;
        border:2px solid #7e7d87;
        border-width: 2px 0;
        text-align: center;
        img{
            margin-bottom:20px;
        }
        p{
            font-size:@summery-size;
            span{
                font-weight:@gnb-weight;
            }
        }
    }
    .no_search{
        padding-top:30px;
        text-align: center;
        color:@subject-color;
        font-size:@menu-size;
        margin-bottom:70px;
        .text1{
            font-weight: @gnb-weight;
            color:@content-color;
        }
    }
    .have_search_wrap{
        width:1024px;
        margin:0 auto;
        .have_search{
            text-align: center;
            padding-top:30px;
            .serch_title{
                span{
                    display:block;
                    color:@content-sub-color;
                    font-size:@summery-size;
                    span{
                        color:@content-color;
                        font-weight: @gnb-weight;
                        display:inline;
                    }
                }
                .deco{
                    letter-spacing: 4px;
                    font-size:@menu-size;
                }

            }
            .search_list{
                text-align: left;
                margin-top:50px;
                li{
                    margin-bottom:40px;
                    a{
                        display: block;
                        padding-left:2px;
                        overflow: hidden;
                          text-overflow:ellipsis;
                          white-space:nowrap;
                        p.title{
                            color:@content-color;
                            font-weight: @gnb-weight;
                        }
                        >span{
                            display:block;
                            width:31px;
                            height:2px;
                            background:@main-color;
                            margin: 13px 0 10px;
                        }
                        p.cont{
                            color:@subject-color;
                            .cont_ex{
                                display: block;
                                overflow: hidden;
                                text-overflow: ellipsis;
                                white-space: nowrap;
                                width: 100%;
                            }
                            .campus{
                                display:block;
                                font-weight: @gnb-weight;
                                color:@content-color;
                            }
                        }
                        &&:hover{
                            p.title,p.cont,p.cont>.campus{
                                color:@subject-color;

                            }
                            >span{background:@subject-color;}
                        }
                    }
                }
            }
            .btn-seemore{margin:0 0 40px;}
        }
    }
}
