.uxuiDesign{
    color:@content-color;

    .class-info{
        width:1024px;
        margin:70px auto;
        font-size:0;

        .left-box{
            width:350px;
            .inlineblock();
            float:left;
        }
        .right-box{
            width:674px;
            text-align: justify;
            padding-left:45px;
            .inlineblock();
            float:right;

            .class-title{
                font-size:@title-size;
                font-weight: @title-weight;
                padding-bottom:20px;
                padding-left: 22px;
                position:relative;
                vertical-align: text-bottom;
                border-bottom:2px @sub-color-second solid;

                &:before{
                    content:"";
                    width:11px;
                    height:44px;
                    background-color: @main-color;
                    position: absolute;
                    left:0;
                    top:2px;
                }
            }
            .info_list{
                font-size:14px;
                padding: 22px 0;
                border-bottom: 1px @sub-color-second solid;
                .info_left{
                    font-weight: @subject-weight;
                    width:115px;
                    .inlineblock();
                }
                .info_right{
                    width:512px;
                    padding:0 15px;
                    float:right;
                    &.last{
                        padding: 0 0 0 10px;
                    }
                }
                &.last{
                    border-bottom:none;
                }
            }
            #campusSelect{
                width:235px;
                height:40px;
                margin-bottom:5px;
            }
            .next_btn{
                font-size:16px;
                font-weight:@gnb-weight;
                width:235px;
                .inlineblock();
                text-align: justify;
                padding:9px 25px 9px 20px;
                float:right;

                span.icon{
                    float:right;
                    margin-top:2px;
                }

                &.sub_color{
                    background-color: @sub-color;
                    color:@white-color;
                }
                &.white_color{
                    margin-top:10px;
                    border:1px #000 solid;
                    color:@content-color;
                }
            }
        }
    }
    .color-red{
        color:@main-color;
        padding: 0 3px;
    }
    .img-mid{
        text-align: center;
        margin-bottom:70px;
    }
    .intro-title{
        padding:0 140px;
        text-align: center;

        .title-wrapper{
            border-top:1px @sub-color-second solid;
            border-bottom:1px @sub-color-second solid;
            width:750px;
            height:315px;
            padding:1px;
            .inlineblock();
            padding:70px 10px;

            .title{
                font-size:@summery-size;
                color:@subject-color;
                margin-bottom:70px;

                strong{
                    font-weight: @gnb-weight;
                }

            }
            img{
                padding:0 20px;
            }
            .icons{

            }
        }
    }
    .intro-detail{
        width:1024px;
        padding:135px 140px 0;
        text-align: center;
        margin:0 auto;

        .detail-subtitle{
            padding-left:18px;
            position:relative;
            .inlineblock();
            color:@title-color;
            margin-bottom:45px;
            font-size:@subject-size;
            font-weight: @gnb-weight;

            &:before{
                content:"";
                width:4px;
                height:27px;
                background-color: @main-color;
                position:absolute;
                left:0;
                top:5px;
            }
        }
    }
    .sm-rect-btns-wrapper{
        margin-bottom:140px;

        .sm-rect-btns{
            width:246px;
            height:50px;
        }
        &.last{
            margin-right:0;
        }
    }

    .link{
        background-color: @sub-color;
        margin-bottom:70px;
        width:1024px;
        margin:0 auto 70px;

        a{
            color:@white-color;
            font-size:16px;
            text-align: center;
            width:100%;
            height: 100%;
            .inlineblock();
            line-height: 65px;
        }
        span.icon{
            margin-left: 18px;
        }
    }
    .title-m{
        width:1024px;
        padding:70px 140px 0;
        margin:0 auto;

        h2{
            font-size:@summery-size;
        }
        div{
            margin-top:48px;
            color:@content-color;
            font-size:@menu-size;
        }

        .skill{
            font-size:0;
             img{
                 margin-left:20px;
                 &:first-child{
                     margin-left:0;
                 }
             }
        }
    }
    .portfolio{
        margin-top:70px;

        .title-m{
            width:750px;
            margin-bottom:120px;
            border-top:1px @sub-color-second solid;
        }
    }
    .type{
        display:none;
    }
    .type.on{
        display:block;
    }
    .type2{
        text-align: center;
        padding-bottom:70px;
        margin-bottom:70px;
        background: url('/img/site_img/curri_bg3.png') no-repeat 50% bottom;
        >p{
            font-size:@subject-size;
            color:@content-color;
            font-weight: @gnb-weight;
            padding-bottom:100px;
            background: url('/img/site_img/curri_bg1.png') no-repeat 50% bottom;
        }
        .curri_cont{
            background: @base-color url('/img/site_img/curri_bg2.png') repeat-y 50%;
            padding:70px;
            .curri_wrap{
                width:1024px;
                margin:0 auto;
                >div{
                    width:414px;
                    .num_title{
                        position:relative;
                        line-height: 157px;
                        height:157px;
                        .num_bg{
                            font-family: @font-anton;
                            font-size:150px;
                            color:@white-color;
                        }
                        p{
                            position:absolute;
                            top:0;
                            font-size:@summery-size;
                            font-weight: @gnb-weight+200;
                        }
                    }
                    .text_cont{
                        font-size:0;
                        .red_bar{
                            .inlineblock();
                            height:3px;
                            width:30px;
                            background:@main-color;
                            margin-bottom:15px;
                        }
                        >div{
                            font-size:@menu-size;
                            color:@subject-color;
                            line-height:@subject-size;
                        }
                    }
                }
                .left{
                    .num_title{
                        text-align: right;
                        padding-right:74px;
                        p{
                            right:84px;
                        }
                    }
                    .text_cont{
                        text-align: right;
                    }
                }
                .right{
                    margin:0 0 0 610px;
                    .num_title{
                        text-align: left;
                        padding-left:74px;
                        p{
                            left:91px;
                        }
                    }
                    .text_cont{
                        text-align: left;
                    }
                }
            }
        }
    }
}
