.intro{
	.intro_cont1_wrap
	{
		background:url('/img/site_img/intro_bg.png')
	}
	div.intro_cont1{
		width:1024px;
		margin:0 auto;
		font-size:0;

		.intro_box{
			width:25%;
			height:256px;
			display:inline-block;
			*display:inline;
    		*zoom:1;
			text-align: center;
			position:relative;
			overflow: hidden;
			.intro_show{
				position:absolute;
				width:100%;
				height:100%;
				padding:89px 30px;
				display:block;
				.bar{
					display:block;
					height:3px;
					width:45px;
					margin:0 auto;
					background:#fff;
					margin-bottom:25px;
				}
				.text{
					display:block;
					font-size:18px;
					line-height:23px;
					color:#fff;
					letter-spacing: 1px;
				}
			}
			.intro_hide{
				position:absolute;
				right:-100%;
				width:100%;
				height:100%;
				padding-top:100px;
				background:rgba(0,0,0,0.5);
				display:block;

				span{
					display:block;
					font-size:@menu-size;
					line-height:20px;
					color:#fff;
				}
			}
		}
		.box1{
			background:#e62e2e;
		}
		.box2{
			background:#252e33;
		}
		.box3{
			background:url('/img/site_img/intro_img1.png');
			.intro_show{
				background:rgba(0, 0, 0, 0.3);
			}
		}
		.box4{
			background:url('/img/site_img/intro_img2.png');
			.intro_show{
				background:rgba(0, 0, 0, 0.3);
			}
		}
		.box5{
			background:url('/img/site_img/intro_img3.png');
			.intro_show{
				background:rgba(0, 0, 0, 0.3);
			}
		}
		.box6{
			background:url('/img/site_img/intro_img4.png');
			.intro_show{
				background:rgba(0, 0, 0, 0.3);
			}
		}
		.box7{
			background:#3b4852;
		}
		.box8{
			background:#7e7d87;
		}

	}
	div.intro_cont2_wrap{
		padding:70px 0;
		background:#edeff0;
		line-height:20px;
		.goal,.policy{
			h2{
				font-size:@subject-size;
				line-height:32px;
				color:@title-color;
				font-weight: @gnb-weight;
				margin-bottom:20px;
				padding-top:69px;

				&::before{
					.inlineblock();
	                content: "";
	                margin-right:20px;
	                width:7px;
	                height:32px;
	                vertical-align: top;
	                background-color:@main-color;
				}
			}
		}
		.goal{
			width:1024px;
			height:343px;
			margin:0 auto;
			padding-left:530px;
			background:url('/img/site_img/intro_img5.png') no-repeat 0 0;
		}
		.policy{
			width:1024px;
			margin:0 auto;
			padding-right:550px;
			margin-top:70px;
			height:343px;
			background:url('/img/site_img/intro_img6.png') no-repeat right 0;

			h2{
				padding-top:23px;
			}
		}
		.introcont1{
			font-size:@menu-size;
			color:@title-color;
			font-weight: @gnb-weight;
			margin-bottom:10px;
		}
		.introcont2{
			color:@subject-color;
			span{
				display:block;
				letter-spacing: -0.5px;
			}
		}
	}
}
