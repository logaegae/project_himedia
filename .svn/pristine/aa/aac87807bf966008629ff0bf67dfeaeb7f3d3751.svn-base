.postscript{
    .postscript_bg{
        background:@base-color;
        padding:70px 0;
        .video_interview{
            width:1024px;
            margin:0 auto;
            >p{
                text-align: center;
                font-size:@menu-size;
                color:@subject-color;
            }
            .red_Bar{
                display:block;
                margin:25px auto 50px;
                background:@main-color;
                width:31px;
                height:2px;
            }
            .video_wrap{
                font-size:0;
                li{
                    .inlineblock();
                    width:300px;
                    margin: 0 62px 62px 0;
                    vertical-align:top;
                    a{
                        display:block;
                        .video_img_wrap{
                            width:300px;
                            height:200px;
                            position:relative;
                            margin-bottom:20px;
                            img{
                                width:100%;
                                // height:100%;
                                margin-bottom:20px;
                            }
                            .mouseactive{
                                position:absolute;
                                background:url('/img/icon/video_off.png') no-repeat 50%;
                                width:100%;
                                height:100%;
                                top:0;
                            }
                        }
                        .box_cont{
                            text-align: left;
                            line-height: 23px;
                            display:block;
                            >span{
                                font-size:15px;
                                color:@content-color;
                                font-weight: @title-weight;
                                display:block;
                                min-height:46px;
                                .campus{
                                    font-size:@menu-size;
                                    color:@subject-color;
                                    font-weight: @subject-weight;
                                    &&:before{
                                        content:"";
                                        .inlineblock();
                                        width:1px;
                                        height:13px;
                                        background:@main-color;
                                        margin:0 10px 0 15px;
                                    }
                                }
                            }
                            .class_name:before{
                                content: "";
                                display:block;
                                width:15px;
                                height:2px;
                                background:@main-color;
                                margin:20px 0 10px;
                            }
                            .class_name{
                                font-size:13px;
                                color:@content-color;
                                font-weight:  @subject-weight;
                            }
                        }
                    }
                    a:hover{
                        .mouseactive{
                            background:url('/img/icon/video_on.png') no-repeat 50%;
                        }
                    }
                }
                .btn-seemore{
                    margin:0;
                }
            }
        }
    }
    .text_interview{
        padding:70px;
        .text_wrap{
            font-size:0;
            margin:0 auto;
            width:1024px;
            li{
                .inlineblock();
                width:300px;
                margin: 0 62px 62px 0;
                vertical-align:top;
                a{
                    display:block;
                    img{
                        width:100%;
                        // height:100%;
                        margin-bottom:20px;
                    }
                    .box_cont{
                        text-align: left;
                        line-height: 23px;
                        display:block;
                        >span{
                            font-size:15px;
                            color:@content-color;
                            font-weight: @title-weight;
                            display:block;
                            min-height:46px;
                            .campus{
                                font-size:@menu-size;
                                color:@subject-color;
                                font-weight: @subject-weight;
                                &&:before{
                                    content:"";
                                    .inlineblock();
                                    width:1px;
                                    height:13px;
                                    background:@main-color;
                                    margin:0 10px 0 15px;
                                }
                            }
                        }
                        .class_name:before{
                            content: "";
                            display:block;
                            width:15px;
                            height:2px;
                            background:@main-color;
                            margin:20px 0 10px;
                        }
                        .class_name{
                            font-size:13px;
                            color:@content-color;
                            font-weight:  @subject-weight;
                        }
                    }
                }
            }
            .btn-seemore{
                margin:0;
            }
        }
    }
}
