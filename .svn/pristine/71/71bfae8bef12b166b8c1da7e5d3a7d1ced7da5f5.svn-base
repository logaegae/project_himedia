	<div class="panel panel-default" ng-controller="myCtrl">
		<div class="panel-heading">{{mode == 'modify' ? '변경' : '신규'}}</div>
		<div class="panel-body">
			<form class="form-horizontal" method="get" ng-submit="submit()">

							
				<div class="form-group">
