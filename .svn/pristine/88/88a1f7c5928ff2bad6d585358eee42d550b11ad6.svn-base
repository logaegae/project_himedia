.campusIntro{
    b{
        color:@title-color;
        font-weight: @title-weight;
    }
    .map-box{
        width:100%;
        background-color: @base-color;
        padding:70px 0;
        text-align:center;

        div{
            margin:0 auto;
        }
    }
    .slide-wrapper{
        text-align: center;
        font-size:0;
        position:relative;
        width:1024px;
        margin:0 auto 70px;

        .slide-box{
            .inlineblock();
            width:650px;
            height:450px;
            overflow:hidden;
            z-index:1;

            .swiper-slide{
                width:650px;
                height:450px;
                overflow:hidden;
                position:absolute;
                top:0;
                display:none;

                img{
                    width:100%;
                }
            }
            .active{
                display:block;
            }
        }

    }
    .slide-btns{
        position:absolute;
        top:50%;
        width:100%;
        z-index:100;

        &>span{
            width: 74px;
            height: 74px;
            border:1px #f0f0f0 solid;
            line-height: 74px;
            text-align: center;
            .inlineblock();
            position:absolute;
            top:-37px;
            cursor:pointer;
        }

        .left-go{
            left:55px;
        }

        .right-go{
            right:55px;
        }
        img{
            padding: 17px 0;
        }
    }
    .campus-info{
        margin:0  auto 70px;
        font-size: 0;
        width:1024px;

        .info-left{
            .inlineblock();
            width: 295px;
            float:left;
            color:@content-color;
            font-size:@subject-size + 5;
            font-weight: @subject-weight;
            padding-left:70px;

            span{
                background-color: @content-color;
                color:@white-color;
            }
        }
        .info-right{
            padding-left:295px;
            font-size:@menu-size;

            dt{
                width:120px;
                color:@content-color;
                font-weight: @gnb-weight;
                .inlineblock();
                float:left;
            }
            dd{
                padding-left:120px;
                color:@subject-color;
                margin-bottom:20px;
            }
        }
        .wayToVisit {

        }
    }
}
