.postscriptView{
    font-weight: 300;
    .postscriptView_bg{
        padding:70px 0;
        background:@base-color;
        .view_wrap{
            width:1024px;
            margin: 0 auto;
            background:@white-color;
            .view_top{
                height:65px;
                line-height: 65px;
                background:@sub-color;
                text-align: center;
                display:inline-block;
                color:@white-color;
                width:100%;
                font-size:18px;
                font-weight: @gnb-weight;
                span{
                    font-weight: @title-weight;
                }
            }
            .view_cont{
                padding:50px 86px;
            }
            .view_bottom{
        		height:50px;
        		width:100%;
        		padding:0 52px;
        		background:#252e33;
        		text-align: center;

        		a{
        			display:inline-block;
        			color:@white-color;
        			font-weight:@subject-weight;
        			line-height:50px;
        			span{
        				margin-left:20px;
        			}
        		}
        		a.prev{
        			float:left;
        			span{
        				margin:0 20px 0 0;
        			}

        		}
        		a.next{
        			float:right

        		}
        	}
        }
        .view_who{
            >p{
                line-height:28px;
                background:url('/img/site_img/view_top_Bg.jpg') repeat-x 50%;
                >span{
                    font-size:35px;
                    font-weight: 700;
                    margin-left:60px;
                    background:@white-color;
                    padding:0 5px;
                    >span{
                        color:@sub-color;
                    }
                    >span.num{
                        color:@sub-color-second;
                    }
                }
            }
            .who_cont{
                font-size:0;
                margin-top:42px;
                text-align: center;
                li{
                    .inlineblock();
                    width:16.6666%;
                    text-align: center;
                    vertical-align: middle;
                    padding:95px 10px 0;
                    border-left:1px solid #d5d5d8;
                    min-height:170px;
                    &&:first-child{
                        border-left:0;
                    }
                    >img{
                        margin:22px 0 25px;
                    }
                    >p{
                        font-size:14px;
                        margin-bottom:0;
                    }
                    >p.title{
                        font-size:15px;
                        font-weight: @subject-weight;
                        margin-bottom:7px;
                    }
                }
                li.icon1{
                    background: url('/img/icon/who_icon1.jpg') no-repeat 50% 23px;
                }
                li.icon2{
                    background: url('/img/icon/who_icon2.jpg') no-repeat 50% 23px;
                }
                li.icon3{
                    background: url('/img/icon/who_icon3.jpg') no-repeat 50% 23px;
                }
                li.icon4{
                    background: url('/img/icon/who_icon4.jpg') no-repeat 50% 26px;
                }
                li.icon5{
                    background: url('/img/icon/who_icon5.jpg') no-repeat 50% 23px;
                }
                li.icon6{
                    background: url('/img/icon/who_icon6.jpg') no-repeat 50% 23px;
                }
            }
        }
    }
    .interview_wrap{
        margin-top:100px;
        >p{
            line-height:28px;
            background:url('/img/site_img/view_top_Bg.jpg') repeat-x 50%;
            margin-bottom:70px;
            >span{
                font-size:35px;
                font-weight: 700;
                margin-left:60px;
                background:@white-color;
                padding:0 5px;
                >span{
                    color:@sub-color;
                }
                >span.num{
                    color:@sub-color-second;
                }
            }
        }
        .top_cont{
            text-align: center;
            margin-bottom:70px;
            p.title{
                text-align: center;
                font-size:@summery-size;
                font-weight: @gnb-weight;
                color:@content-color;
            }
            span.red_bar{
                height:2px;
                width:31px;
                background:@main-color;
                display:block;
                margin: 20px auto 15px;
            }

        }
    }
    .interview_wrap.video {
        >p {margin-bottom:50px;}
    }
    div.question_box{
        text-align:left;
        display:block;
        margin:0 0 40px 0;
        p.question{
            font-size:@menu-size;
            color:@content-color;
            line-height:20px;
            margin-bottom:20px;
            font-weight: @gnb-weight;
            span{
                color:@main-color;
            }
        }
        p.answer{
            font-size:@menu-size;
            color:@content-color;
            line-height:20px;
        }
    }
}
