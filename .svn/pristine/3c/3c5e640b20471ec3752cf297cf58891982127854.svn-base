.recruit{
    word-break: keep-all;
    b{
        color:@title-color;
        font-weight: @title-weight;
    }

    .recruit-basebox-wrapper{
        width:100%;
        background-color: @base-color;

        .title-m{
            margin:0;
            padding:50px 0;
        }
    }

    .recruitInfo-wrapper{
        font-size:@menu-size;
        width:1024px;
        margin:0 auto;

        .recruitInfo-box1{
            border-right:1px #000 solid;
        }
        .title-m{
            .recruitInfo-content{
                span{
                    color:@content-color;
                    position:relative;
                    margin-top:70px;
                    display:block;
                    font-weight: @gnb-weight;

                    &::after{
                        content:"";
                        width:20px;
                        height:20px;
                        .inlineblock();
                        position:absolute;
                        background: url('../img/icon/btn_plus_red.png') no-repeat center center;
                        top:-50px;
                        left:50%;
                        transform: translateX(-50%);
                    }
                    &:first-child{
                        margin-top:60px;
                    }
                    &:first-child::after{
                        width:0;
                        height:0;
                    }
                }
            }
        }
    }
}
