.onlineCounselStep2{
    .onlineCounsel_bg{
        background:@base-color;
        width:100%;
    }
    .step_wrap{
        text-align: center;
        margin-bottom:70px;
        padding-top:70px;
        ol{
            li{
                display:inline-block;
                *display:inline;
                *zoom:1;
                font-size:0;
                text-align: center;
                margin-left:60px;
                position:relative;
                &&::after{
                    content: "";
                    display: inline-block;
                    background:url('/img/icon/icon_sprite.png') no-repeat;
                    background-position: -120px 0;
                    width:12px;
                    height:20px;
                    position:absolute;
                    top: 18px;
                    left: -36px;
                }
                &&:first-child{
                    margin-left:0;

                    &&::after{
                        background:none;
                        width:0;
                        height:0
                    }
                }
                span{
                    display:block;
                    font-size:@summery-size;
                    color:@content-sub-color;
                    &&.num{
                        font-weight: @title-weight;
                    }
                    &&.text{
                        font-weight: @subject-weight;
                        font-size:19px;
                        letter-spacing: -1px;
                    }
                }

                &&.on{
                    span.num{
                        color:@main-color;
                    }
                    span.text{
                        color:@content-color;
                    }
                }
            }
        }

    }
    .btn_wrap{
        text-align: center;
        padding:30px 0;
        a{
            display:inline-block;
            *display:inline;
            *zoom:1;
            width:100px;
            height:50px;
            line-height:50px;
            color:@white-color;
            background:#252e33;
        }
        span.arrow{
            margin-left:15px;
        }
    }
}
