.portfolio .title-l {
    margin-bottom: 70px;
}

.portfolio-list {
    margin: 0 auto;
    width: 1024px;
    margin-bottom: 60px;
    a>span {
        display: block;
        text-align: right;
        padding-bottom: 20px;
        color: @content-color;
        font-weight: @subject-weight
    }
    .lists {
        position: relative;
        .modallink > a {
            text-decoration: none;      
        }
    }
    a:hover {
        display: block;
        .pofo_on {
            display: block;
        }
    }
    .pofo_on {
        position: absolute;
        top: 0;
        display: none;
    }
    .portfolio-name {
        color: @content-color;
        padding-top: 20px;
        margin-bottom: 10px;
        .campus-name {
            font-size: @summery-size;
            font-weight: @gnb-weight;
            text-decoration: none;
        }
        .portfolio-info {
            color: @subject-color;
            float: right;
            font-weight: @subject-weight;
            span {
                font-size: @menu-size;
            }
        }
    }
}

.portfolio {
    .pagination {
        margin: 110px 0 70px;
    }
    .modalPopup {
        height: 660px;
        z-index: 1000;
        
        .modal-title {
            font-size: @menu-size;
            div {
                display: inline-block;
                line-height: 55px;
            }
            .close-box {
                margin-top: 15px;
                float:right;
                text-align: bottom;
            }
        }
        .modal-contents {
            
            .modal-body {
                padding: 40px;
                .icon.arrow-slide {
                    position: absolute;
                    display: inline-block;
                    top: 44%;
                }
                .icon.arrow-slide.left {
                    left: 35px;
                }
                .icon.arrow-slide.left:hover {
                    background-position: -124px -149px
                }
                .icon.arrow-slide.right:hover {
                    background-position: -174px -149px
                }
                .icon.arrow-slide.right {
                    right: 35px;
                }
                .modal-main {
                    width: 756px;
                    height: 500px;
                    overflow-x: hidden;
                    overflow-y: auto;
                    margin: 0 auto;
                    img {
                        width: 100%;
                    }
                }
            }
     
            .boxP {
                a{
                    color:black;
                }
                width: 147px;
                padding-top: 6px;
                padding-bottom: 4px;
                outline: 1px black solid;
                color: black;
                display: inline-block;
                position: absolute;
                font-size: 13px;
                font-weight: 300;
                right: 100px;
                bottom: 28px;
                text-align: center;
                .icon.arrow.red {
                    margin-bottom: 3px;
                }
            }
            .boxP:hover {
                background-color: @sub-color;
                span{
                      color: white;
                }
            }
        }
    }
    
    
    
    .popUp-line {
        color: red;
        margin-left: 11px;
        margin-right: 11px;
    }
}

.modalBlind {
    position: fixed;
    left: 0;
    right: 0;
    top: 0;
    bottom: 0;
    background: rgba(0, 0, 0, 0.3);
    z-index: 10;
}