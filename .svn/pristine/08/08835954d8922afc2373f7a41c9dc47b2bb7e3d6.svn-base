.allTeacher {
    word-break: keep-all;
    b {
        color: @title-color;
        font-weight: @title-weight;
    }
    .sm-rect-btns-wrapper {
        padding: 0 55px;
        text-align: left;
    }
    .allTeacher-basebox-wrapper {
        width: 100%;
        margin-top: 70px;
        padding: 70px 0;
        background-color: @base-color;
        &>div {
            width: 1024px;
            margin: 0 auto;
            ul {
                text-align: justify;
                font-size: 0;
                .teacher-box {
                    width: 315px;
                    height: 470px;
                    margin-bottom: 75px;
                    margin-right: 39px;
                    position: relative;
                    .teacher-pic {
                        width: 315px;
                        height: 405px;
                        background-repeat: no-repeat;
                        background-size: contain;
                        background-position: center center;
                        overflow: hidden;
                    }
                    .teacher-info {
                        width: 245px;
                        height: 175px;
                        background-color: @sub-color;
                        color: @white-color;
                        padding: 32px 22px 26px;
                        position: absolute;
                        bottom: 0;
                        left: 50%;
                        text-align: left;
                        transform: translateX(-50%);
                        .teacher-name {
                            font-size: @summery-size;
                            font-weight: @gnb-weight;
                            text-align: left;
                            position: relative;
                            margin-bottom: 34px;
                            display: block;
                            &:after {
                                content: "";
                                .inlineblock();
                                background-color: #fff;
                                width: 30px;
                                height: 2px;
                                position: absolute;
                                left: 0;
                                bottom: -26px;
                            }
                        }
                        .teacher-class {
                            font-size: 13px;
                            text-align: left;
                        }
                        .modal_btn_Wrap{
                            display:block;
                            color:@white-color;
                            margin-top:12px;
                            text-align: right;
                            span{
                                color:@white-color;
                                margin-right:10px;
                                font-size:22px;
                            }
                            .glyphicon-user {
                                &:hover {
                                    color:@main-color;
                                }
                            }
                            .glyphicon-expand {
                                font-size:25px;
                                &:hover {
                                    color:@main-color;
                                }
                            }
                        }
                    }
                    // &:hover {
                    //     .teacher-info {
                    //         background-color: @main-color;
                    //     }
                    // }
                }
            }
        }
        .btn-seemore {
            margin-bottom: 0;
        }
    }
    .modalPopup {
        .close-box {
            float: right;
            text-align: bottom;
        }
        .modal-body {
            padding: 40px;

            .content-detail{
                span{
                    font-size: @summery-size;
                    font-weight: 400;
                    color: black;
                }
                div
                {
                    margin-top:5px;
                }
            }

            p {
                line-height: 23px;
                span {
                    font-size: 18px;
                    font-weight: 500;
                    color: black;
                    line-height: 26px;
                    &:before {
                        display:inline-block;
                        margin-right:10px;
                        content:" ";
                        width:4px;
                        height:21px;
                        vertical-align:top;
                        background-color:@main-color;
                    }
                }
            }
        }
        .teacher_img {
            .inlineblock();
            width: 180px;
            height: 180px;
            margin: 0 auto 50px;
        }
        .body-left,
        .body-right {
            padding-top: 50px;
            height: 480px;
        }
        .body-right {
            overflow-y: scroll;
            padding: 5px;
        }
        strong {
            margin-bottom: 10px;
        }
        .br-sm {
            margin: 5px 0;
        }
    }
}
