.condition{
    a{
        color:black;
/*        &:hover{
			color: black;
		}*/
    }
    p.himedia{
        font-size:@menu-size;
        letter-spacing: 8px;
        background:url('/img/site_img/condition_bg.png') no-repeat 0 bottom;
        display:block;
        margin:0 auto;
        width:220px;
        height:48px;
        text-align: center;
    }
    p.title{
        text-align: center;
        font-size:@subject-size;
        font-weight:@title-weight;
        line-height: 28px;
        color:@content-color;
        padding-top:26px;
    }
    p.cong{
        font-size:@summery-size;
        text-align: center;
        margin-top:5px;
    }
    p.num{
        background:url('/img/site_img/condition_numbg.png') no-repeat;
        display:block;
        margin:48px auto 15px;
        width:190px;
        height:180px;
        text-align: center;
        line-height: 180px;
        font-size:50px;
        font-weight: 700;
        color:@content-color;
    }
    p.accumulate{
        font-size:@menu-size;
        color:#222222;
        line-height: 25px;
        text-align: center;
    }
    .red_bar{
        width:31px;
        height:2px;
        background:@main-color;
        margin:20px auto 10px;
        display:block;
    }
    .sub_text{
        font-size:@menu-size;
        color:@subject-color;
        text-align: center;
    }
    form{
        .condition_top{
            text-align: center;
            margin:65px 0 70px;
            select{
                width:145px;
                height:36px;
            }
        }
        .condition_bg{
            background:@base-color;
            padding:70px 0 0 0;
        }
        .condition_table{
            width:1024px;
            margin: 0 auto;
            text-align: center;
            font-size:13px;
            background:@white-color;
            caption{
                margin:0;
                padding:0;
                height:0;
                width:0;
            }
            th{
                height:50px;
                text-align: center;
                background: @sub-color;
                color:@white-color;
            }
            tbody{
                .lists{
                    cursor: pointer;
                }
                tr{
                    border-top:1px solid @base-color;
                    &&:first-child{border-top:0;}
                }
                td{
                    height:50px;
                }
            }
        }
        .pagination{
            span{
                a{
                    background:@white-color;
                }
                a.on{
                    background:@main-color;
                    color:@white-color;
                }
            }
        }
    }

    .modalPopup {
        height: 495px;
        .modal-title {
            font-size: @subject-size;

            div {
                display: inline-block;
                line-height: 55px;
            }
            .close-box {
                float: right;
                line-height: 49px;
            }
        }

        .modal-body{
            padding-top: 40px;
            padding-bottom: 0px;
        }
        .comment{
            font-size: @summery-size;
        }

        .btns{
            margin-top: 60px;
            margin-bottom:40px;
            input{
                padding:12px 28px;
                margin-right:10px;
                border:none;
                color:@white-color;
                font-weight: @gnb-weight;
            }
            input[type="reset"]{
                background-color: @main-color;
            }
        }

    }
}
