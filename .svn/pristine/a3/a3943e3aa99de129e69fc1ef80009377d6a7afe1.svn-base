//select 박스 유효성검사
$(function(){
    $('input[type="submit"]').click(function(){
        var valid = true;
        var target = null;
        $(this).parents('form').find('select').each(function(i,e){
            if($(e).attr('required') == 'required' && $(e).children('option:selected').attr('disabled') == 'disabled'){
                target = $(e);
                valid = false;
            }
        });
        if(!valid){
            alert("선택사항을 입력해주세요");
            target.focus();
            return false;
        }
    });

})
